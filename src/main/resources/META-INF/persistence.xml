<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">

    <!-- Nombre del persistence unit -->
    <persistence-unit name="Lab3PU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/LaboratorioDS</jta-data-source>
        <class>com.example.laboratorio_3.model.Student</class>
        <class>com.example.laboratorio_3.model.Course</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.jdbc.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
